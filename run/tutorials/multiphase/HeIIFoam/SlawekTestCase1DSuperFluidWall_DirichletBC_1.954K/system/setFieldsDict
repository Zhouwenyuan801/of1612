FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha 0
);

regions
(
    // Set patch values (using ==)
    boxToCell
    {
        box (-10 -10 -4.5) (10 0.001 5.5);

        fieldValues
        (
            volScalarFieldValue alpha 1
        );
    }
);

