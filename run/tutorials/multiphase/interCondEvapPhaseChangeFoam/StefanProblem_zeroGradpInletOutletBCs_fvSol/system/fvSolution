SIMPLE
{
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;

    residualControl
    {
        p_rgh           1e-6;
        T               1e-6;
        U               1e-6;
        "(k|epsilon|omega)"   1e-6;
    }
}

